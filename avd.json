{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "hostPoolName": {
      "type": "string",
      "metadata": {
        "description": "Name of the host pool."
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "Name of the virtual network."
      }
    },
    "addressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Address prefix for the virtual network."
      }
    },
    "subnetName": {
      "type": "string",
      "metadata": {
        "description": "Name of the subnet within the virtual network."
      }
    },
    "subnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "Address prefix for the subnet."
      }
    },
    "applicationGroupName": {
      "type": "string",
      "metadata": {
        "description": "Name of the application group."
      }
    },
    "virtualMachineName": {
      "type": "string",
      "metadata": {
        "description": "Name of the virtual machine."
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Name of the admin Username."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password of the local admin account"
      }
    },
  },
  "resources": [
{
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2023-02-01",
      "name": "[concat(parameters('virtualMachineName'), '-NIC')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[variables('subnetRef')]"
              }
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2022-03-01",
      "name": "[parameters('virtualMachineName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_B2s"
        },
        "osProfile": {
          "computerName": "[parameters('virtualMachineName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "id": "[resourceId('Microsoft.Compute/galleries/images/versions', 'AVD_AIB_Gallery', 'win10avd', '1.0.0')]"
          },
          "osDisk": {
            "createOption": "FromImage",
            "osType": "Windows",
            "managedDisk": {
              "storageAccountType": "Standard_LRS"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('virtualMachineName'), '-NIC'))]"
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('virtualMachineName'), '-NIC'))]"
      ]
    },
    {
        "apiVersion": "2021-03-01",
        "type": "Microsoft.Compute/virtualMachines/extensions",
        "name": "[concat(parameters('vmName'), '/customScript')]",
        "location": "[parameters('location')]",
        "properties": {
            "publisher": "Microsoft.Compute",
            "type": "CustomScriptExtension",
            "typeHandlerVersion": "1.10",
            "autoUpgradeMinorVersion": true,
            "settings": {
                "script": "[concat('https://raw.githubusercontent.com/RamonImpara/IaC/main/Add-WVDHostToHostpoolSpringV7.ps1')]",
                "arguments": "[concat('arg1', ' arg2')]"
            }
        }
    }
  ],
  "variables": {
    "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetName'))]"
  }
}
