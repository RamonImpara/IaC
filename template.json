{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "hostPoolName": {
      "type": "string",
      "metadata": {
        "description": "Name of the host pool."
      }
    },
    "appGroupName": {
      "type": "string",
      "metadata": {
        "description": "Name of the application group."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.DesktopVirtualization/hostPools",
      "apiVersion": "2022-09-09",
      "name": "[parameters('hostPoolName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "friendlyName": "My Host Pool",
        "hostPoolType": "Pooled",
        "maxSessionLimit": 10,
        "loadBalancerType": "BreadthFirst",
        "ring": 0,
        "preferredAppGroupType": "Desktop"
      }
    },
    {
      "type": "Microsoft.DesktopVirtualization/applicationGroups",
      "apiVersion": "2022-09-09",
      "name": "[parameters('appGroupName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "friendlyName": "My App Group",
        "applicationGroupType": "RemoteApp",
        "hostPool": {
          "id": "[resourceId('Microsoft.DesktopVirtualization/hostPools', variable('hostPoolName'))]"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.DesktopVirtualization/hostPools', parameters('hostPoolName'))]"
      ]
    }
  ]
}
